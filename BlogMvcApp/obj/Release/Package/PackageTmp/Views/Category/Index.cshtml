@model IEnumerable<BlogMvcApp.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



    <div class="container">
        <div class="col-12">
            <h2>Kategori Listesi</h2>
            <hr />

            <p>
                @Html.ActionLink("Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
            </p>
            @if (TempData["Kategori"] != null)
            {
                var kategori = (BlogMvcApp.Models.Category)TempData["Kategori"];
                <div class="alert alert-success" role="alert">
                    <strong><span class="glyphicon glyphicon-ok"></span>@kategori.KategoriAdi </strong> Güncellendi.
                </div>
            }

            <table class="table table-bordered table-hover table-striped table-responsive-sm">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.KategoriAdi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BlogSayisi)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.KategoriAdi
                        </td>
                        <td>
                            @item.BlogSayisi
                        </td>
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                            @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>
                }

            </table>

        </div>
        </div>
