@model IEnumerable<BlogMvcApp.Models.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="container">
    <div class="col-12">
        <h2>Blog Listesi</h2>
        <hr />

        <p>
            @Html.ActionLink("Yeni Blog Ekle", "Create", null, new { @class = "btn btn-primary" })
        </p>

        @if (TempData["Blog"] != null)
        {
            var blog = (BlogMvcApp.Models.Blog)TempData["Blog"];
            <div class="alert alert-success" role="alert">
                <strong><span class="glyphicon glyphicon-ok"></span>@blog.Baslik </strong> Güncellendi.
            </div>
        }
        <table class="table table-bordered table-hover table-striped table-responsive-sm">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.KategoriAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Resim)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.EklenmeTarihi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Onay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Anasayfa)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Resim)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.EklenmeTarihi)
                    </td>
                    <td>
                        @if (item.Onay)
                        {
                            <label class=" badge badge-success">Onaylı</label>
                        }
                        else
                        {
                            <label class=" badge badge-danger">Onay Bekliyor</label>
                        }

                    </td>
                    <td>
                        @if (item.Anasayfa)
                        {
                            <label class="badge badge-success">Anasayfa</label>
                        }
                        else
                        {
                            <label class="badge badge-danger">Anasayfa Değil</label>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                    </td>
                </tr>
            }



        </table>
    </div>
</div>
