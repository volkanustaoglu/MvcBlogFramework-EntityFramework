@model IEnumerable<BlogMvcApp.Models.Category>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>


<div class="container pt-3" style="font-family: Poppins Bold">
    <ul class="nav nav-pills mb-3" >
        
            <li class="nav-item">
                <a class="nav-link" id="pills-home-tab" href="/Blog/List" role="tab" aria-controls="pills-home" aria-selected="true">Tümünü Göster</a>
            </li>
            @foreach (var item in Model)
            {
                <li class="nav-item">
                    <a class="nav-link " id="pills-profile-tab" href="/Blog/List/@item.Id" role="tab" aria-controls="pills-profile" aria-selected="false">@item.KategoriAdi</a>
                </li>
            }
       

</ul>
</div>




<script>
    $(".nav-link").click(function (event) {


        $(".nav-link").removeClass("active");
        $(this).addClass("active")
